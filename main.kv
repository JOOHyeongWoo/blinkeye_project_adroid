

BoxLayout:
    orientation: 'vertical'
    Upper_bar:
        size_hint: (1, 0.4)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1

            Rectangle:
                pos: self.pos
                size: self.size

    slider_bar:
        size_hint: (1, 0.4)
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1

            Rectangle:
                pos: self.pos
                size: self.size

    Check_minute:
        size_hint: (1, 0.5)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1

            Rectangle:
                pos: self.pos
                size: self.size


    Notification_bar:
        size_hint: (1, 0.5)
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1

            Rectangle:
                pos: self.pos
                size: self.size

    Button_bar:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1

            Rectangle:
                pos: self.pos
                size: self.size

       



<Upper_bar>:
    padding: [30, 20]
    Label:
        size_hint: (0.3, 1)
        font_name: 'NanumGothic.ttf'
        text: 'blink eye num'
        

    TextInput:
        size_hint: (0.1, 0.7)
        pos_hint: {'center':1}
        hint_text: '20'
        font_name: 'NanumGothic.ttf'


<slider_bar>:
    padding: [90, 30]
    Slider:
        value: 20
        size_hint: (0.3, 1)


<Check_minute>:
    padding: [70, 40]
    
    Label:
        text: '1minute'
    CheckBox:
        size_hint: (0.3, 1)


    Label:
        text: '3minute'
    CheckBox:
        size_hint: (0.3, 1)


    Label:
        text: '5minute'
    CheckBox:
        size_hint: (0.3, 1)


    Label:
        text: '10minute'
    CheckBox:
        size_hint: (0.3, 1)
    

<Notification_bar>:
    padding: [70, 40]
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'

        CheckBox:
            size_hint: (0.3, 1)

        Label: 
            size_hint: (0.3, 1)
            text: 'alarm'
   
    BoxLayout:
        orientation: 'vertical'

        CheckBox:
            size_hint: (0.3, 1)

        Label: 
            size_hint: (0.3, 1)
            text: 'vibration'
   

    BoxLayout:
        orientation: 'vertical'

        CheckBox:
            size_hint: (0.3, 1)

        Label: 
            size_hint: (0.3, 1)
            text: 'silence'
   

<Button_bar>:
    padding: [90, 40]
    Button:
        size_hint: (1, 0.4)
        text: 'start'

